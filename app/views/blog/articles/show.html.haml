- title @article.title
- meta_description @article.excerpt
- meta_keywords @article.tags

%header.intro-header
  .container
    .row
      %div{class: 'col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1'}
        .page-heading
          .row
            %div{class: 'col-md-12'}
              .post-header
                %h1.text-left= @article.title
                %span{class: 'subheading text-left'}
                  = render partial: "meta", locals: { article: @article }
                  = preserve_markdown @article.excerpt


%article
  .container
    .row
      %div{class: 'col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1'}
        = preserve_markdown @article.body
        %hr
        %p.action= link_to "‚Üê Back to Overview", blog_articles_path
